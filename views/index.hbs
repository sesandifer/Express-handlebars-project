{{#if user}}
    <a href="/nominate" class="btn btn-primary btn-lg" role="button">Nominate Someone</a>
    <a href="/awards/{{user.id}}" class="btn btn-success btn-lg" role="button">View My Awards</a>
{{else}}
    <main role="main" class="inner cover">
        <h1 class="cover-heading">Welcome to Award.ly!</h1>
        <p class="lead"> Please login to your account or register to get started</p>
        <a href="/login" class="btn btn-lg btn-primary">Login</a>
        <a href="/register" class="btn btn-lg btn-success">Register</a>
        </p>
    </main>
{{/if}}