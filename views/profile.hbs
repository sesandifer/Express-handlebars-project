{{#if message}}
    <div>{{message}}</div>
{{/if}}

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Email Address</th>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Account Type</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>{{user.id}}</th>
            <th>{{user.email}}</th>
            <th>{{user.username}}</th>
            <th>{{user.firstname}}</th>
            <th>{{user.lastname}}</th>
            <th>{{accountTypeFromId user.account_type}}</th>
            <th>{{departmentNameFromId user.dept_id}}</th>
        </tr>
    </tbody>
</table>

<div>
    <h3>Signature</h3>
    <img src="https://s3.us-east-2.amazonaws.com/vulpecula/{{user.id}}.png" width="500" height="100" onerror="this.style.visibility = 'hidden'">
</div>
<div id="upload-signature">
    <form method="post" enctype="multipart/form-data" action="/upload-signature">
    <input name="signaturefile" type="file" />
    <input type="submit" value="Upload Signature"/>
    </form>
</div>